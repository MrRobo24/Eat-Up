<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/txtQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:text="@string/q_6_how_will_the_training_be_delivered"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQuestion"
            android:layout_margin="5dp"
            android:padding="4dp"
            android:text="@string/a_6_you_will_be_taught_using_pre_recorded_videos_and_text_tutorials_you_will_be_asked_to_submit_assignments_on_a_regular_basis"
            android:textSize="20sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>